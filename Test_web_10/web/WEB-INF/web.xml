<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>servletSaveEmployes</servlet-name>
        <servlet-class>com.employe.controller.servlet_save_employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_edit_employee</servlet-name>
        <servlet-class>com.employe.controller.servlet_edit_employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_list_employee</servlet-name>
        <servlet-class>com.employe.controller.servlet_list_employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_employe</servlet-name>
        <servlet-class>com.employe.controller.Servlet_employe</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletSaveEmployes</servlet-name>
        <url-pattern>/servletSaveEmployes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_edit_employee</servlet-name>
        <url-pattern>/servlet_edit_employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_list_employee</servlet-name>
        <url-pattern>/servlet_list_employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_employe</servlet-name>
        <url-pattern>/Servlet_employe</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
